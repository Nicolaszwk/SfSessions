{% extends 'base.html.twig' %}

{% block title %}Ajouter un étudiant{% endblock %}

{% block body %}

    <h1>Ajouter un étudiant</h1>

    {# {{ form(formAddStudent) }} #}

    {{ form_start(formAddStudent) }}
    <div class="row"> 
        <div class="col-sm">
            {{form_row(formAddStudent.firstname)}}
        </div>
        <div class="col-sm">
            {{form_row(formAddStudent.lastname)}}
        </div>
    </div>
    <div class="row"> 
        <div class="col-sm">
            {{form_row(formAddStudent.gender)}}
        </div>
        <div class="col-sm">
            {{form_row(formAddStudent.birthDate)}}
        </div>
    </div>
    <div class="row"> 
        <div class="col-sm">
            {{form_row(formAddStudent.city)}}
        </div>
        <div class="col-sm">
            {{form_row(formAddStudent.email)}}
        </div>
        <div class="col-sm">
            {{form_row(formAddStudent.phoneNumber)}}
        </div>
    </div>
    <br>

        {{ form_end(formAddStudent) }}

{% endblock %}